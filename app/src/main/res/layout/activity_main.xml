<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fg"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#E3E0DA"></View>
    <RadioGroup
        android:id="@+id/jingdong_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/shouye"
            android:checked="true"
            android:button="@null"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="@drawable/shouye_bg"
            android:layout_height="150px" />
        <RadioButton
            android:id="@+id/fenlei"
        android:button="@null"
        android:layout_width="0px"
        android:layout_weight="1"
        android:background="@drawable/fenlei_bg"
        android:layout_height="150px" />
        <RadioButton
            android:id="@+id/faxian"
            android:button="@null"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="@drawable/faxian_bg"
            android:layout_height="150px" />
        <RadioButton
            android:id="@+id/gouwuche"
            android:button="@null"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="@drawable/gouwuche"
            android:layout_height="150px" />
        <RadioButton
            android:id="@+id/wode"
            android:button="@null"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="@drawable/wode_bg"
            android:layout_height="150px" />

    </RadioGroup>


</LinearLayout>